{
  "name": "hundred-words-news/hundred-words-news",
  "description": "News in 100 Words WordPress Plugin",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "kahkashan",
      "email": "kahkashan1507@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Hundred_Words_News\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hundred_Words_News\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}

